<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Bunk_Predictor">
    <TextView
        android:id="@+id/e_r_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Required Details"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        android:textSize="21dp"
        android:textColor="@color/red" />


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_below="@+id/e_r_d"
        tools:ignore="MissingConstraints"
        android:id="@+id/Ti1"
        tools:layout_editor_absoluteY="75dp">

        <EditText
            android:id="@+id/attended_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="10dp"
            android:hint="How many Classes You have Attended this Semester "
            android:textSize="15dp"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/white" />
    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_below="@+id/Ti1"
        tools:ignore="MissingConstraints"
        android:id="@+id/Ti2"
        tools:layout_editor_absoluteY="75dp">

        <EditText
            android:id="@+id/total_classes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
             android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:hint="Total nummber of classes this semester"
            android:textSize="15dp"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/white" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/predict"
        android:layout_width="394dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Ti2"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="8dp"
        android:text="PREDICT"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@color/navyBlue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="445dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Bunkresult"

        android:layout_below="@+id/predict"
        android:layout_marginTop="50dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="60dp"
        android:textStyle="bold"
        android:textSize="20dp"
       />


</RelativeLayout>