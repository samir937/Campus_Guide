<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUsActivity">


<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:clipToPadding="false"
    android:clipChildren="false"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"

        android:elevation="9dp"

        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/imageAbout"
            android:layout_width="wrap_content"
            android:layout_height="230dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/about_logo" />


        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageAbout"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:text="Developer"
            android:textColor="@color/black"
            android:textSize="26dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/fbButton"
            android:layout_width="158dp"
            android:layout_height="56dp"
            android:layout_below="@+id/text1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/fb12"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/gitButton"
            android:layout_width="158dp"
            android:layout_height="56dp"
            android:layout_below="@+id/text1"
            android:layout_marginStart="13dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/fbButton"
            android:background="@drawable/github1" />

        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fbButton"
            android:layout_marginLeft="30dp"
            android:text="Details"
            android:textSize="18dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t2"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="Student of Lovely Professional University"
            android:textColor="@color/lightBlack"
            android:textSize="14dp"
            android:textStyle="normal" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/t3"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:background="?android:attr/listDivider" />

        <TextView
            android:id="@+id/t4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="Email Us:-samirpattnaik14@gmail.com"
            android:textColor="@color/lightBlack"
            android:textSize="14dp"
            android:textStyle="normal" />

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/t4"
            android:layout_marginTop="10dp"
            android:background="?android:attr/listDivider" />


        <TextView
            android:id="@+id/t5"
            android:layout_width="357dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider2"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="Team Members:Sachin Pant, Nayeem Bhati, Ajay Rawat"
            android:textColor="@color/lightBlack"
            android:textSize="14dp"
            android:textStyle="normal" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/t4"
            android:layout_marginTop="10dp"
            android:background="?android:attr/listDivider" />


    </RelativeLayout>



</androidx.cardview.widget.CardView>

    </RelativeLayout>
