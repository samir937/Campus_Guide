<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:elevation="10dp">

        <ImageView
            android:id="@+id/cart_i1"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginRight="30dp"/>

        <ImageView
            android:id="@+id/cart_i4"
            android:layout_width="97dp"
            android:layout_height="41dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="134dp"
            android:layout_marginRight="0dp"
            android:layout_toRightOf="@id/cart_i2"
            android:src="@drawable/remove" />

        <TextView
            android:id="@+id/cart_t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/cart_i1"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/cart_t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@id/cart_t1"
            android:layout_toRightOf="@id/cart_i1"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/cart_t4"
            android:text="Price : "
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/cart_i1"
            android:layout_below="@id/cart_t2"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/cart_t3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/cart_t4"
            android:layout_below="@id/cart_t2"
            android:textSize="15dp"/>

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:elevation="8dp"
            android:id="@+id/cart_i2"
            android:layout_below="@id/cart_t3"
            android:layout_toRightOf="@id/cart_i1"
            android:src="@drawable/plus"/>

        <TextView
            android:id="@+id/cart_e1"
            android:text="1"
            android:textSize="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cart_t3"
            android:layout_toRightOf="@id/cart_i2" />

        <ImageButton
            android:layout_width="25dp"
            android:elevation="8dp"
            android:layout_marginTop="10dp"
            android:layout_height="25dp"
            android:id="@+id/cart_i3"
            android:src="@drawable/minus"
            android:layout_below="@id/cart_t3"
            android:layout_toRightOf="@id/cart_e1"/>

    </RelativeLayout>



</androidx.cardview.widget.CardView>