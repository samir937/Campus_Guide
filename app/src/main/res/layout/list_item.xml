<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout"
    android:layout_margin="10dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="8dp"
    android:layout_width="match_parent"
    android:layout_height="245dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_book_black_24dp"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="9dp"
            android:gravity="center_vertical"
            android:text="COURSE CODE"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/registration_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_marginStart="70dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="9dp"
            android:layout_marginLeft="68dp"
            android:gravity="center_vertical"
            android:text="CA :"
            android:textColor="@color/white"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="9dp"
            android:layout_toEndOf="@+id/registration_text"
            android:gravity="center_vertical"
            android:text="CA MARKS"
            android:textColor="@color/white"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/registration_text"
            android:layout_marginStart="70dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="9dp"
            android:gravity="center_vertical"
            android:text="MTE"
            android:textColor="@color/white"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/registration_text"

            android:layout_marginTop="2dp"
            android:layout_marginEnd="9dp"
            android:layout_toEndOf="@+id/textView4"
            android:gravity="center_vertical"
            android:text="MTE Marks "
            android:textColor="@color/white"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_marginStart="70dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="9dp"
            android:gravity="center_vertical"
            android:text="ETE : "
            android:textColor="@color/white"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="9dp"
            android:layout_toEndOf="@+id/textView6"
            android:gravity="center_vertical"
            android:text="ETE MARKS"
            android:textColor="@color/white"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_marginStart="70dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="9dp"
            android:gravity="center_vertical"
            android:text="Attendence : "
            android:textColor="@color/white"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_marginStart="0dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="9dp"
            android:layout_toEndOf="@+id/textView8"
            android:gravity="center_vertical"
            android:text="marks"
            android:textColor="@color/white"
            android:textSize="17dp" />


        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView8"
            android:layout_marginStart="70dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="9dp"
            android:gravity="center_vertical"
            android:text="Total Marks"
            android:textColor="@color/white"
            android:textSize="17dp" />


        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView8"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="9dp"
            android:layout_toEndOf="@+id/textView10"
            android:gravity="center_vertical"
            android:text="total"
            android:textColor="@color/white"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider2"
            android:layout_marginStart="70dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="9dp"
            android:gravity="center_vertical"
            android:text="EXPECTED GRADE : "
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider2"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="9dp"
            android:layout_toEndOf="@+id/textView12"
            android:gravity="center_vertical"
            android:text="A+"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />


        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/textView10"
            android:layout_marginTop="10dp"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="70dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>