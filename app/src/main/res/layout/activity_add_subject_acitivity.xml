<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".add_subject_acitivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subjects Details"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColorHint="@color/colorPrimary"
        android:layout_marginLeft="10dp"
        android:id="@+id/subject_detail_text"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/cgpa_icon"
        android:layout_width="wrap_content"
        android:layout_height="330dp"
        android:layout_below="@+id/subject_detail_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="19dp"
        android:src="@drawable/cgpa_calc" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_subjects"
        android:layout_width="67dp"
        android:layout_height="100dp"
        android:clickable="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/ic_add_black_24dp"
        app:backgroundTint="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cgpa_icon"
        android:text="Add Subjects by pressing Action + Button at the Bottom"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:textColor="@color/black"

        />
</RelativeLayout>